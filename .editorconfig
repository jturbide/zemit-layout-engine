# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.js]
charset = utf-8
indent_style = tab
indent_size = 4

# Matches the exact files either package.json
[{package.json}]
indent_style = tab
indent_size = 4